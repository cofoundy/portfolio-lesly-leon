---
import { siteConfig } from "../config";

const trayectoriaEs = siteConfig.trayectoria;

const trayectoriaEn = [
  {
    empresa: "LG Electronics Spain", division: "B2B Division",
    cargo: "Brand Marketing Manager", periodo: "Mar 2023 – Present", actual: true,
    bullets: [
      "Execute SEM, social ads, and email marketing campaigns across Meta, Google, and LinkedIn",
      "Oversee content creation for media, social networks, and PR aligned with corporate strategy",
      "Prepare performance reports — KPIs: reach, engagement, ROI",
      "Optimize databases, segmentation, and CRM strategies (Salesforce, Eloqua)",
      "Manage events with clients, partners, and B2B sales channels",
    ],
  },
  {
    empresa: "LG Electronics Spain", division: "B2C Division",
    cargo: "Brand Marketing Manager", periodo: "Aug 2022 – Mar 2023", actual: false,
    bullets: [
      "Managed 360° campaigns integrating digital (social, SEM, emailing) and traditional media (TV, radio, BTL)",
      "Coordinated new product launches with sales and product teams",
      "Developed materials for retail and e-commerce",
      "Produced market analysis and trend reports using GfK",
    ],
  },
  {
    empresa: "Menta Innovations", division: "",
    cargo: "B2B & B2C Marketing Specialist", periodo: "Mar 2021 – Sep 2022", actual: false,
    bullets: [
      "Coordinated multichannel commercial campaigns for distribution and end customers",
      "Implemented lead generation and CRM strategies (Eloqua, Salesforce)",
      "Organized trade shows, fairs, and commercial activities",
      "Conducted competitive benchmarking and product analysis",
    ],
  },
  {
    empresa: "LG Electronics Spain SA", division: "",
    cargo: "B2B Marketing Intern", periodo: "Mar 2019 – May 2020", actual: false,
    bullets: [
      "Collaborated on on/offline campaign execution and commercial events",
      "Developed marketing materials and content, supporting social media and PR calendars",
    ],
  },
];
---

<section id="trayectoria" class="py-16 md:py-24" style="background: var(--color-surface-light);">
  <div class="max-w-5xl mx-auto px-6">
    <h2 class="reveal text-sm font-bold uppercase tracking-widest mb-12 i18n" data-es="Trayectoria" data-en="Experience" style="color: var(--color-accent);">
      Trayectoria
    </h2>

    <div class="relative">
      <div class="absolute left-4 md:left-8 top-0 bottom-0 w-0.5" style="background: var(--color-primary-light); opacity: 0.4;"></div>

      {trayectoriaEs.map((job, i) => (
        <div class={`reveal stagger-${i + 1} relative pl-12 md:pl-20 pb-12 last:pb-0`}>
          <div
            class="absolute left-2.5 md:left-6.5 top-1 w-3 h-3 rounded-full border-2"
            style={`background: ${job.actual ? 'var(--color-accent)' : 'white'}; border-color: ${job.actual ? 'var(--color-accent)' : 'var(--color-primary)'};`}
          ></div>

          {job.actual && (
            <span class="inline-block mb-2 px-3 py-0.5 rounded-full text-xs font-bold uppercase tracking-wider text-white i18n" data-es="Actual" data-en="Current" style="background: var(--color-accent);">
              Actual
            </span>
          )}

          <div class="rounded-xl p-5 md:p-6 card-hover" style="background: white; border: 1px solid rgba(61, 90, 128, 0.1);">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-1 mb-3">
              <div>
                <h3 class="text-lg font-bold i18n" data-es={job.cargo} data-en={trayectoriaEn[i].cargo} style="color: var(--color-primary-dark);">
                  {job.cargo}
                </h3>
                <p class="text-sm font-semibold i18n" data-es={`${job.empresa}${job.division ? ` · ${job.division}` : ''}`} data-en={`${trayectoriaEn[i].empresa}${trayectoriaEn[i].division ? ` · ${trayectoriaEn[i].division}` : ''}`} style="color: var(--color-primary);">
                  {job.empresa}{job.division && ` · ${job.division}`}
                </p>
              </div>
              <span class="text-xs font-medium px-3 py-1 rounded-full whitespace-nowrap self-start i18n" data-es={job.periodo} data-en={trayectoriaEn[i].periodo} style="background: var(--color-surface); color: var(--color-primary);">
                {job.periodo}
              </span>
            </div>

            <ul class="space-y-1.5">
              {job.bullets.map((b, bi) => (
                <li class="flex items-start gap-2 text-sm" style="color: #555;">
                  <span class="mt-1.5 w-1.5 h-1.5 rounded-full flex-shrink-0" style="background: var(--color-accent);"></span>
                  <span class="i18n" data-es={b} data-en={trayectoriaEn[i].bullets[bi]}>{b}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<div class="bar-shimmer h-1"></div>
