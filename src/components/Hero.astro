---
import { siteConfig } from "../config";
---

<section id="hero" class="min-h-[90vh] flex items-center" style="background: var(--color-surface-light);">
  <div class="max-w-6xl mx-auto px-6 py-16 md:py-24">
    <div class="flex flex-col md:flex-row items-center gap-10 md:gap-16">
      <!-- Photo -->
      <div class="hero-photo flex-shrink-0">
        <div class="relative">
          <div
            class="w-56 h-56 md:w-72 md:h-72 rounded-2xl overflow-hidden shadow-xl"
            style="border: 3px solid var(--color-primary-light);"
          >
            <img
              src="/profile.jpg"
              alt={siteConfig.name}
              class="w-full h-full object-cover object-top"
              loading="eager"
            />
          </div>
          <!-- Decorative accent corner -->
          <div
            class="absolute -bottom-3 -right-3 w-16 h-16 rounded-xl -z-10"
            style="background: var(--color-accent); opacity: 0.3;"
          ></div>
        </div>
      </div>

      <!-- Text -->
      <div class="text-center md:text-left">
        <h1 class="hero-name text-4xl md:text-5xl lg:text-6xl font-extrabold leading-tight" style="color: var(--color-primary-dark);">
          Lesly<br/>
          <span style="color: var(--color-primary);">León Vásquez</span>
        </h1>

        <p class="hero-title mt-4 text-lg md:text-xl font-semibold tracking-wide uppercase" style="color: var(--color-accent);">
          {siteConfig.title}
        </p>

        <p class="hero-tagline mt-4 text-base md:text-lg max-w-md" style="color: var(--color-primary);">
          {siteConfig.tagline}
        </p>

        <div class="hero-social mt-8 flex items-center gap-4 justify-center md:justify-start">
          <a
            href={siteConfig.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full text-sm font-semibold text-white btn-hover"
            style="background: var(--color-primary);"
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
          <a
            href={`mailto:${siteConfig.social.email}`}
            class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full text-sm font-semibold border-2 btn-hover"
            style="border-color: var(--color-primary); color: var(--color-primary);"
          >
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="4" width="20" height="16" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
            Email
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Shimmer separator -->
<div class="bar-shimmer h-1"></div>
